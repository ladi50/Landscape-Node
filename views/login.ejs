<div class="container-fluid wrraper login">
<form class="form-signin text-center" action="/login" method="POST">
  <img class="mb-4" src="../images/logo.png" alt="" width="72" height="72">
  <h1 class="h3 mb-3 font-weight-normal">Log In</h1>
  <label for="inputEmail" class="sr-only">Email address</label>
  <input type="email" name="email" class="form-control" placeholder="Email address" autofocus autocomplete="off" required>
  <label for="inputPassword" class="sr-only">Password</label>
  <input type="password" name="password" class="form-control" placeholder="Password" required>
  <a href="/" id="loginButton"><button name="button" class="btn btn-lg btn-primary btn-block" type="submit" style="font-weight: bold">Log In</button></a>
  <br> <h5 class="or-login">or</h5> <br>
</form>

<div class="form-signin text-center" action="/login" method="POST">
  <a href="/auth/google"><button class="login-button-google"><img class="google-logo" src="/images/google.png" alt="google-logo">Log in with Google</button></a>
  <a href="/auth/facebook"><button class="login-button-fb"><img class="facebook-logo" src="/images/facebook.png" alt="facebook-logo">Log in with Facebook</button></a>
